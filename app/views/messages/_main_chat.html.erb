<div class = chat__header>
  <div class=chat__header--title><%= @room.name %></div>
  <div class=chat__header--button>
     <a href="">チャットを終了する</a>
  </div>
</div>

<div class=chat__messages>
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "chat__form"}, local: true do |f|%>
  <div class="chat__form--input">
    <%= f.text_field :content, class: 'chat__form--input_message', placeholder: 'type a message' %>
    <label class="chat__form--input_image">
      <span class="chat__form--input_image_file">画像</span>
      <%= f.file_field :image, class: 'chat__form--input_image_hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: '=chat__form--submit' %>
<% end %>