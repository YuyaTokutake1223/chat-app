<div class=side_bar__header>
  <div class=side_bar__header--user_name>
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class=side_bar__header--button >
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class=side_bar__rooms>
  <% current_user.rooms.each do |room| %>
    <div class=side_bar__rooms--room>
      <div class=side_bar__rooms--room_name>
        <a href=""><%= room.name %></a>
      </div>
    </div>
  <% end %>
</div>



